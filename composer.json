{
    "name": "suoragmbh/apm-wrapper",
    "description": "This is a wrapper for APMs in PHP",
    "keywords": [
        "SuoraGmbH",
        "apm-wrapper"
    ],
    "homepage": "https://github.com/suoragmbh/apm-wrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Hans-Christian Otto",
            "email": "c.otto@suora.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Suora\\ApmWrapper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suora\\ApmWrapper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
